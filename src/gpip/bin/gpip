#!/usr/bin/env python

from argparse import ArgumentParser

from ..tools import get

def main(args):

    if args.verbose:
        print("Running on verbose mode.")

    pip = None
    
    if args.pip_instance:
        pip = args.pip_instance

    get(
        args.get

        ,https=args.https
        ,pip_instance=pip
    )

if __name__ == "__main__":

    parser = ArgumentParser()

    parser.add_argument(
        '-g','--get'
        ,required=False
        ,help="Install the given package."
        ,type=str
    )

    parser.add_argument(
        '-v','--verbose'
        ,required=False
        ,help="Enable Verbose Mode."
        ,action="store_true"
    )

    parser.add_argument(
        '--https'
        ,required=False
        ,help="Enable HTTPS Mode."
        ,action="store_true"
    )

    parser.add_argument(
        '--pip-instance'
        ,required=False
        ,help="Establish PIP executable to perform installs."
        ,type=str
    )

    args = parser.parse_args()

    main(args)